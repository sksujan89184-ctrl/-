<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="Assistant avatar"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_make_pdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Make a PDF from these photos"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_load_avatar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Load Avatar from URL"
        app:layout_constraintTop_toBottomOf="@id/btn_make_pdf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_delete_folder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete folder (voice confirm)"
        app:layout_constraintTop_toBottomOf="@id/btn_make_pdf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_enroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enroll Voice"
        app:layout_constraintTop_toBottomOf="@id/btn_delete_folder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Verify Voice"
        app:layout_constraintTop_toBottomOf="@id/btn_enroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_read_news"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Open News &amp; Read Aloud"
        app:layout_constraintTop_toBottomOf="@id/btn_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_voice_command"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Voice Command"
        app:layout_constraintTop_toBottomOf="@id/btn_read_news"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_start_crew"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Crew Agents"
        app:layout_constraintTop_toBottomOf="@id/btn_voice_command"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_grant_permissions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Grant Permissions"
        app:layout_constraintTop_toBottomOf="@id/btn_start_crew"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_enable_gf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enable GF Persona"
        app:layout_constraintTop_toBottomOf="@id/btn_grant_permissions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/tv_log"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Live Action Log:\n"
        android:padding="12dp"
        android:background="#f2f2f2"
        app:layout_constraintTop_toBottomOf="@id/btn_delete_folder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>